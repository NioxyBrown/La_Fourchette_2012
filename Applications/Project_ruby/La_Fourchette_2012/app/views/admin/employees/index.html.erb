<h1>Serveurs</h1>
<p class="lead">Liste des differents serveurs de FoodInc</p>

<% if @employees.empty? %>
	<h3>Aucun serveur enregistré</h3>
<% else %>

<table class="table table-striped">
	<thead>
		<tr>
			<td>ID</td>
			<td>Nom</td>
			<td>Restaurant</td>
			<td>Is active</td>
			<td></td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		<% @employees.each do |employee| %>
		<tr>
			<td><%= employee.id%></td>
			<td><%= employee.username%></td>
			<% if employee.restaurant != nil %>
				<td><%= employee.restaurant.name %></td>
			<% else %>
				<td>Aucun restaurant assigné</td>
			<% end %>
			<td><%= employee.is_active %></td>
			<td><%= link_to 'Détails', admin_employee_path(employee) %></td>
		    <td><%= link_to 'Editer', edit_admin_employee_path(employee) %></td>
		    
		    <% if employee.is_active%>
		    	<td><%= link_to 'Désactiver', admin_employee_desactivate_path(employee), confirm: 'Etes-vous sûr?' %></td>
		    <% else %>
		    	<td><%= link_to 'Activer', admin_employee_activate_path(employee), confirm: 'Etes-vous sûr?' %></td>
		    <% end %>
	    </tr>
	   <% end %>
	</tbody>
</table>
<%end%>
<br />

<%= link_to 'Nouveau serveur', new_admin_employee_path, :class => 'btn btn-primary btn-large' %>
