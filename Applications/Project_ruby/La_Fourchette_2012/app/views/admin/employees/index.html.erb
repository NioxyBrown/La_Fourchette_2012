<h1>Serveurs</h1>
<p class="lead">List of the different waiters of FoodInc</p>

<% if @employees.empty? %>
	<h3>No waiter in database</h3>
<% else %>

<table class="table table-striped">
	<thead>
		<tr>
			<td>ID</td>
			<td>Name</td>
			<td>Restaurant</td>
			<td>Is active</td>
			<td></td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		<% @employees.each do |employee| %>
		<tr>
			<td><%= employee.id%></td>
			<td><%= employee.username%></td>
			<% if employee.restaurant != nil %>
				<td><%= employee.restaurant.name %></td>
			<% else %>
				<td>Aucun restaurant assign√©</td>
			<% end %>
			<td><%= employee.is_active %></td>
			<td><%= link_to 'Details', admin_employee_path(employee) %></td>
		    <td><%= link_to 'Edit', edit_admin_employee_path(employee) %></td>
		    
		    <% if employee.is_active%>
		    	<td><%= link_to 'Desactivate', admin_employee_desactivate_path(employee), confirm: 'Are you sure?' %></td>
		    <% else %>
		    	<td><%= link_to 'Activate', admin_employee_activate_path(employee), confirm: 'Are you sure?' %></td>
		    <% end %>
	    </tr>
	   <% end %>
	</tbody>
</table>
<%end%>
<br />

<%= link_to 'Nouveau serveur', new_admin_employee_path, :class => 'btn btn-primary btn-large' %>
