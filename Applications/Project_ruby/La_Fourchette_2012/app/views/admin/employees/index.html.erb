<h1>Employees</h1>
<p class="lead">List of the different employees of FoodInc</p>

<% if @employees.empty? %>
	<h3>No employees in database</h3>
<% else %>

<table class="table table-striped">
	<thead>
		<tr>
			<td>ID</td>
			<td>Name</td>
			<td>Restaurant</td>
			<td></td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		<% @employees.each do |employee| %>
		<tr>
			<td><%= employee.id%></td>
			<td><%= employee.username%></td>
			<td><%= employee.restaurant.name%></td>
		    <td><%= link_to 'Show', admin_employee_path(employee) %></td>
		    <td><%= link_to 'Edit', edit_admin_employee_path(employee) %></td>
		    <td><%= link_to 'Destroy', admin_employee_path(employee), confirm: 'Are you sure?', method: :delete %></td>
	    </tr>
	   <% end %>
	</tbody>
</table>
<%end%>
<br />

<%= link_to 'New Employee', new_admin_employee_path, :class => 'btn btn-primary btn-large' %>
