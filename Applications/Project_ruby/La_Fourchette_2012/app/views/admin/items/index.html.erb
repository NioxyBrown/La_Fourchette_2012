<h1>Items</h1>
<p class="lead">Liste des differents items de FoodInc</p>

<% if @items.empty? %>
	<h3>Aucun item enregistré</h3>
<% else %>

<table class="table table-striped">
	<thead>
		<tr>
		    <th>Id</th>
		    <th>Nom</th>
		    <th>Is active</th>
		    <th>Prix</th>
		    <th>Temps</th>
		    <th>Type de produit</th>
		    <th></th>
		    <th></th>
		    <th></th>
  		</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
		  <tr>
		  	<td><%= item.id%></td>
		  	<td><%= item.name%></td>
		  	<td><%= item.is_active%></td>
		  	<td><%= item.price%></td>
		  	<td><%= item.time%></td>
		  	<td><%= item.product_type.name%></td>
		    <td><%= link_to 'Détails', admin_item_path(item) %></td>
		    <td><%= link_to 'Editer', edit_admin_item_path(item) %></td>
		    <% if item.is_active%>
	    		<td><%= link_to 'Désactiver', admin_item_desactivate_path(item), confirm: 'Are you sure?' %></td>
	    	<%else%>
	    		<td><%= link_to 'Activer', admin_item_activate_path(item), confirm: 'Are you sure?'%></td>
	    	<% end %>
		  </tr>
		<%end%>
	</tbody>
</table>
<% end %>
<br />

<%= link_to 'Nouvel Item', new_admin_item_path, :class => 'btn btn-primary btn-large'  %>
