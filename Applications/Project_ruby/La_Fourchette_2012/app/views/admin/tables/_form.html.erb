<%= form_for([:admin, @table]) do |f| %>

<% javascript '/javascripts/dynamic_employee' %>


  <% if @table.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@table.errors.count, "error") %> prohibited this admin_table from being saved:</h2>

      <ul>
      <% @table.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 	<p class="field">
		<%= f.label :is_active %>
    	<%= f.radio_button :is_active, true %> <%= f.label :is_active, "Yes" %>
		<%= f.radio_button :is_active, false %> <%= f.label :is_active, "No" %>
    </p>

	<p class="field">
		<%= f.label :is_available %>
    	<%= f.radio_button :is_available, true %> <%= f.label :is_available, "Yes" %>
		<%= f.radio_button :is_available, false %> <%= f.label :is_available, "No" %>
    </p>
 	
 	<p class="field">
   		<%= f.label :nb_seat %>
   		<%= f.text_field :nb_seat %>
 	</p>
 	
 	<p class="field">
   		<%= f.label :number_table %>
   		<%= f.text_field :number_table %>
 	</p>
 	
 	<p class="restaurant_field">
   		<label for="table_restaurant_id">Restaurant</label>
   		<%= collection_select(:table, :restaurant_id, restaurant, :id, :city, { :prompt => 'select a restaurant'}) %>
 	</p>
 	
 	<p class="employee_field">
 		<label for="table_employee_id">Employee</label>
   		<%= collection_select(:table, :employee_id, employee, :id, :username, { :prompt => 'select an employee'}) %>
 	</p>

  <div class="actions">
    <%= f.submit :class => 'btn btn-primary btn-large' %>
  </div>
<% end %>
