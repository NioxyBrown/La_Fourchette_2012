<h2>Table details :</h2>

<p>
  <b>Id :</b>
  <%= @table.id %>
</p>

<p>
  <b>Is active :</b>
  <%= @table.is_active %>
</p>

<p>
  <b>Is available :</b>
  <%= @table.is_available %>
</p>

<p>
  <b>Number of seat :</b>
  <%= @table.nb_seat %>
</p>

<p>
  <b>Table number :</b>
  <%= @table.number_table %>
</p>

<p>
  <b>Waiter :</b>
  <% if @table.employee != nil %>
	<%= @table.employee.username %>
  <% else %>
	no employee assigned
  <% end %>
</p>

<p>
  <b>Restaurant :</b>
  <% if @table.restaurant != nil %>
	<%= @table.restaurant.name %>
  <% else %>
	no restaurant assigned
  <% end %>
</p>

<p>
  <b>Create date :</b>
  <%= @table.created_at %>
</p>

<p>
  <b>Update date :</b>
  <%= @table.updated_at %>
</p>


